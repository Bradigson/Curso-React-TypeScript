import { useRouter } from 'next/router';

const Home = () => {
  const router = useRouter();

  const handleNavigation = () => {
    // Navegar a otra p√°gina, por ejemplo, /about
    router.push('/about');
  };

  return (
    <div>
      <h1>Home Page</h1>
      <button onClick={handleNavigation}>Ir a About</button>
    </div>
  );
};

export default Home;
